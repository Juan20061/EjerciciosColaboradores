<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjerciciosColaboradores.Sueldo"
             Title="Sueldo">
    <StackLayout Padding="20">
        <Label Text="Horas Trabajadas:" />
        <Entry x:Name="HorasTrabajadasEntry" 
           Placeholder="Ingrese las horas trabajadas" />

        <Label Text="Pago por Hora:" />
        <Entry x:Name="PagoPorHoraEntry" 
           Placeholder="Ingrese el pago por hora" />

        <Button Text="Calcular Sueldo Semanal" 
            Clicked="Button_Clicked" />

        <Label x:Name="SueldoLabel" 
           FontSize="20" 
           TextColor="Black" 
           HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>